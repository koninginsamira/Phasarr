{#def
    backgroundClass: str = "",
    additionalClass: str = ""
#}

<div
    class="{{ backgroundClass }}"
>
    <div
        class="
            flex flex-col gap-10
            w-full max-w-7xl
            mx-auto
            {# props.padding === undefined || props.padding ? [
                'p-4 pt-10', 'sm:p-6 sm:pt-10'
            ].join() : '', #}
            {{ additionalClass }}
        "
    >
        {{ content }}
    </div>
</div>