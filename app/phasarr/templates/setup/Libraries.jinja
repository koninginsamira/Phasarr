{#def
    title: str = "",

    current_stage: str,
    stages: dict,

    skippable: bool = False,
    form
#}

<setup.Setup current_stage={{ current_stage }} stages={{ stages }}>
    <form action="" method="post" novalidate>
        {{ form.hidden_tag() }}

        <div class="flex flex-col gap-8">
            
            {# <div class="flex flex-col gap-8">
                
            </div> #}

            <ui.containers.card.Card variant additional_class="p-2">
                <ui.containers.card.Card variant>
                </ui.containers.card.Card>
                <ui.buttons.Button additional_class="w-full">
                    <p class="text-4xl">+</p>
                </ui.buttons.Button>
            </ui.containers.card.Card>

            <div class="flex justify-between my-5">
                <ui.buttons.Button href={{ url_for("setup.authentication") }}>Back</ui.buttons.Button>
                <div class="flex gap-2 items-center">
                    {% if form.errors %}<p class="text-sm text-error">Correct errors before you try again.</p>{% endif %}
                    {% if stages[current_stage]["skippable"] %}<ui.buttons.Button href={{ url_for("setup.libraries") }}>Skip</ui.buttons.Button>{% endif %}
                    <ui.forms.Submit primary error={{ form.errors }} form={{ form }} />
                </div>
            </div>
        </div>
    </form>
</setup.Setup>