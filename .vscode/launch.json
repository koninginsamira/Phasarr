    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug docker",
            "type": "debugpy",
            "request": "attach",
            "preLaunchTask": "docker",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/app",
                    "remoteRoot": "."
                }
            ],
            "justMyCode": true
        },
        {
            "name": "Debug locally",
            "type": "debugpy",
            "request": "launch",
            "preLaunchTask": "tailwind",
            "module": "flask",
            "env": {
                "FLASK_APP": "phasarr",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1",
                "CONFIGPATH": "config/",
                "DATAPATH": "data/"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "autoStartBrowser": false
        }
    ]
}